<%- include("../partials/header") %>
<div class="container"> 
        <h1 style="text-align: center;">Edit your comment on <%= campground.name%></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id%>/comment/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= comment.text%>" name="comment[text]">
                </div>
                <button class="btn btn-success btn-block" >submit</button>
            </form>
        </div>
        
    <div class="alert text-center"><a href="/campgrounds">Go Back!</a></div>
</div>

<%- include("../partials/footer") %>