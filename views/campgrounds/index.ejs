<%- include("../partials/header") %>
<div class="container">
    <header class="jumbotron" id="campgroundJumbotron" >
        <div class="container">
            <h1>Welcome to Let'sGoCamp!</h1>
            <p>View our handpicked campgrounds from all over the world!</p>
            <div>
                <a href="/campgrounds/new" class="btn btn-primary btn-lg" >Add New Camp!</a>
            </div>
        </div>
    </header>
    <div class="row">
        <% campgrounds.forEach((campground)=>{ %>
            <div class="col-md-3 col-sm-6">
                <div class="card" id="campgroundCards">
                    <img class="card-img-top" src="<%= campground.image %>" alt="photo of <%= campground.name %>">
                    <div class="card-body caption">
                        <h3 class="text-center"><%= campground.name %></h3>
                    </div>
                    <a href="/campgrounds/<%= campground._id%>" class="btn btn-primary mx-auto">More Info</a>
                </div>
                
               
            </div>
        <% }) %>
    </div>
   

</div>



<%- include("../partials/footer") %>